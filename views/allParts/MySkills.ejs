<script>
  document.addEventListener("DOMContentLoaded", () => {
    const skillSection = document.getElementById("Skill-sec");
    const skillItems = skillSection.querySelectorAll(".skill-item");
    const skillHead = skillSection.querySelector(".skill-head");
    const skillSub = skillSection.querySelector(".skill-h3");

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Animate the title and subtitle
            skillHead.style.animation = "slideInLeft 2s ease forwards";
            skillSub.style.animation = "slideInLeft 2s ease 0.2s forwards";

            // Animate skill icons one by one
            skillItems.forEach((item, index) => {
              setTimeout(() => {
                item.style.animation = "slideInLeft 0.8s ease forwards";
              }, 200 + index * 150); // start after subtitle
            });

            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.3 }
    );

    observer.observe(skillSection);
  });
</script>
